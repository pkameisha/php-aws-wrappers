{
    "name"        : "bf-dsf/aws-wrappers",
    "description" : "Wrappers for AWS SDK",
    "type"        : "library",
    "require"     : {
        "php": "^7.1 || ^8.0",
        "aws/aws-sdk-php": "^3.22",
        "doctrine/common": "^2.13",
        "oasis/event": "^1.0",
        "oasis/logging": "^1.3"
    },
    "require-dev" : {
        "phpunit/phpunit"   : "^9.5",
        "league/uri"        : "^4.2"
    },
    "license"     : "MIT",
    "authors"     : [
        {
            "name" : "Minhao Zhang",
            "email": "minhao.zhang@qq.com"
        },
        {
            "name" : "Darlinkster"
        },
        {
            "name" : "Business Factory"
        }
    ],
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload"    : {
        "psr-4": {
            "BF\\Mlib\\AwsWrappers\\": "src/AwsWrappers/",
            "BF\\Mlib\\Logging\\"    : "src/Logging/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BF\\Mlib\\AwsWrappers\\Test\\": "ut/"
        }
    }
}
